
<header class="navbar navbar-expand-lg navbar-light bg-light fixed-top nav-shadow">
    <a class="navbar-brand" href="/">Blog University</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-md-auto d-md-flex">
        <li class="nav-item-active">
          <a class="nav-link" href="<%= universities_url %>">Universidades</a>
        </li>
        <% if user_signed_in? %>
          <%= usertype_helper%>
          <li class="nav-item">
            <a class="nav-link" href="<%= users_posts_path %>">Posts</a>
          </li>
          <li class="nav-item">
            <a class="navbar-brand" href="<%= edit_user_registration_path %>"><%= image_tag(current_user.avatar.url, class:"img_nav_profile") %>
              <span class="username-span"><%= current_user.username %></span></a>
          </li>
          <%= options_user %>
          <% else %>
          <li class="nav-item">
            <a class="nav-link"  href="<%= new_user_session_path %>">Login</a>
          </li>
        <li class="nav-item">
          <a class="btn btn-primary d-lg-inline-block mb-3 mb-md-0 ml-md-3"  href="<%= new_user_registration_path %>">Create Account</a>
        </li>
          <%end%>
      </ul>
    </div>
